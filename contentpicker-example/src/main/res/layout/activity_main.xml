<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="io.github.hendraanggrian.contentpickerexample.MainActivity">

    <Button
        android:id="@+id/button_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dispatch camera"/>

    <Button
        android:id="@+id/button_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick gallery"/>

    <Button
        android:id="@+id/button_gallery_multiple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick multiple gallery"/>

    <ImageView
        android:id="@+id/imageview_result"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_marginTop="32dp"
        android:src="@android:drawable/ic_menu_gallery"/>
</LinearLayout>